{
  "name": "GitHub Repository Size",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Automatically adds repository size to GitHub's repository summary",
  "homepage_url": "https://github.com/harshjv/github-repo-size",
  "author": "Harsh Vakharia",
  "icons": {
    "16": "icons/ghrs16.png",
    "48": "icons/ghrs48.png",
    "128": "icons/ghrs128.png"
  },
  "permissions": [
    "http://github.com/*",
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://github.com/*",
        "https://github.com/*"
      ],
      "js": [
        "src/inject.js"
      ],
      "run_at": "document_end"
    }
  ]
}
